<?xml version="1.0"?>
<ruleset name="MyStandard">
    <description>A custom coding standard</description>

    <file>./src</file>

    <arg name="report-summary"/>
    <arg name="report-full"/>
    <arg value="sp"/>

    <!-- PSR-12 -->
    <rule ref="PSR12.Classes.AnonClassDeclaration">
        <include-pattern>./src/PSR12/Classes/AnonClassDeclaration/*.php</include-pattern>
    </rule>
    <rule ref="PSR12.Classes.ClassInstantiation">
        <include-pattern>./src/PSR12/Classes/ClassInstantiation/*.php</include-pattern>
    </rule>
    <rule ref="PSR12.Classes.ClosingBrace">
        <include-pattern>./src/PSR12/Classes/ClosingBrace/*.php</include-pattern>
    </rule>
    <rule ref="PSR12.Classes.OpeningBraceSpace">
        <include-pattern>./src/PSR12/Classes/OpeningBraceSpace/*.php</include-pattern>
    </rule>
    <rule ref="PSR12.ControlStructures.BooleanOperatorPlacement">
        <include-pattern>./src/PSR12/ControlStructures/BooleanOperatorPlacement/*.php</include-pattern>
    </rule>
    <rule ref="PSR12.ControlStructures.ControlStructureSpacing">
        <include-pattern>./src/PSR12/ControlStructures/ControlStructureSpacing/*.php</include-pattern>
    </rule>
    <rule ref="PSR12.Files.DeclareStatement">
        <include-pattern>./src/PSR12/Files/DeclareStatement/*.php</include-pattern>
    </rule>
    <rule ref="PSR12.Files.FileHeader">
        <include-pattern>./src/PSR12/Files/FileHeader/*.php</include-pattern>
    </rule>

</ruleset>
