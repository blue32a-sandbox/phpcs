<?xml version="1.0"?>
<ruleset name="MyStandard">
    <description>A custom coding standard</description>

    <file>./src</file>

    <arg name="report-summary"/>
    <arg name="report-full"/>
    <arg value="sp"/>

    <!-- PSR-12 -->
    <rule ref="PSR12.Classes.AnonClassDeclaration">
        <include-pattern>./src/PSR12/Classes/AnonClassDeclaration/*.php</include-pattern>
    </rule>
    <rule ref="PSR12.Classes.ClassInstantiation">
        <include-pattern>./src/PSR12/Classes/ClassInstantiation/*.php</include-pattern>
    </rule>

</ruleset>
