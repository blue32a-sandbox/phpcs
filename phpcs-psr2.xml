<?xml version="1.0"?>
<ruleset name="MyStandard">
    <description>A custom coding standard</description>

    <file>./src/PSR2</file>

    <arg name="report-summary"/>
    <arg name="report-full"/>
    <arg value="sp"/>

    <!-- PSR-2 -->
    <rule ref="PSR2.Classes.ClassDeclaration">
        <include-pattern>./src/PSR2/Classes/ClassDeclaration/*.php</include-pattern>
    </rule>
    <rule ref="PSR2.Classes.PropertyDeclaration">
        <include-pattern>./src/PSR2/Classes/PropertyDeclaration/*.php</include-pattern>
    </rule>
    <rule ref="PSR2.ControlStructures.ControlStructureSpacing">
        <include-pattern>./src/PSR2/ControlStructures/ControlStructureSpacing/*.php</include-pattern>
    </rule>
    <rule ref="PSR2.ControlStructures.ElseIfDeclaration">
        <include-pattern>./src/PSR2/ControlStructures/ElseIfDeclaration/*.php</include-pattern>
    </rule>
    <rule ref="PSR2.ControlStructures.SwitchDeclaration">
        <include-pattern>./src/PSR2/ControlStructures/SwitchDeclaration/*.php</include-pattern>
    </rule>

</ruleset>
